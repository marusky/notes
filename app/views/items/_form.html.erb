<%= form_with model: @item, class: 'grid grid-cols-1 gap-y-6' do |f| %>
  <% if @item.errors.any? %>
    <ul>
      <% @item.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>
  <div>
    <%= f.label :title, class: 'text-gray-600 text-sm font-medium' %>
    <%= f.text_field :title, class: 'mt-1 w-full border-0 ring-1 px-3 py-1.5 ring-gray-300 rounded-md' %>
  </div>
  <div>
    <%= f.label :expected_cost, class: 'text-gray-600 text-sm font-medium' %>
    <%= f.number_field :expected_cost, step: 0.01, class: 'mt-1 w-full border-0 ring-1 px-3 py-1.5 ring-gray-300 rounded-md' %>
  </div>
  <div>
    <%= f.label :is_done, class: 'text-gray-600 text-sm font-medium' %>
    <%= f.check_box :is_done, class: 'ml-2 border-0 ring-1 ring-gray-300 rounded-md' %>
  </div>
  <div>
    <%= f.submit class: 'px-4 py-2 bg-indigo-600 text-white rounded-md' %>
  </div>
<% end %>